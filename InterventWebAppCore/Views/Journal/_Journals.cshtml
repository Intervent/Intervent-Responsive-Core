                                </div>
                            </a>
                        </div>
                    }
                    <div class="small-12 medium-6 large-4 cell">
                        <a href="@Html.Raw(Url.Action("DailyVitalsLog", "Journal"))">
                            <div class="recommendation-item pink">
                                <div class="slider">&nbsp;</div>
                                <div><i class="fa fa-heartbeat" aria-hidden="true"></i></div>
                                <div class="title">@Translate.Message("L2830")</div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
