@using InterventWebApp
@model InterventWebApp.LoginModel

@{
	ViewBag.Title = "LandingPages";
	Layout = "~/Views/Shared/_AnonymousLayout.cshtml";
	ViewBag.Details = "LandingPage";
}
<section class="feature reversed intro compass mcallen FCHC">
    @Html.Partial("FullCircle/_FullCircleHeader", new ViewDataDictionary(ViewData) { { "headerStyle", "transparent" } })
    <div class="grid-container">
        <div class="intro-body grid-x grid-margin-x">
            <div class="intro-text small-7 large-offset-5 cell">
                <h2 class="text-center">
                    @Translate.Message("L2693")
                </h2>
                <div class="intro-buttons mcallen-main-buttons">
                    <button class="intro-button pink" onclick="$('#sign-up-modal').foundation('open'); return false;">
                        @Translate.Message("L2437")
                    </button>
                    <button class="intro-button pink" onclick="$('#login-modal').foundation('open'); return false;">@Translate.Message("L426")</button>
                </div>
            </div>
        </div>
    </div>
</section>
@Html.Partial("FullCircle/_FullCircleFooter")
<div id="sign-up-modal" class="reveal medium" data-reveal data-close-on-click="false" data-close-on-esc="false">
    <div class="grid-x">
        <div class="cell">
            <h2 class="text-center">@Translate.Message("L431")</h2>
        </div>
        <div class="cell">@Html.Partial("_SignUp")</div>
        <div class="cell text-center">
            <a href="#" onclick="$('#login-modal').foundation('open'); return false;">@Translate.Message("L426")</a>
        </div>
        <button class="close-button" data-close aria-label="Close modal" type="button">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</div>

@Html.Partial("_ResetPassword")

<div class="nav-to-top">
    <a href="#" class="button"><i class="fa fa-chevron-up"></i></a>
</div>

@section scripts
{
    <script type="text/javascript">
        //Homepage Scroll function
        function scrollDown() {
            $('html, body').animate({
                scrollTop: $(".parallax-wrapper").offset().top
            }, 1000);
        }

        $(document).on('click', '#close', function () {
            document.getElementById("sign-up-form").reset();
        });
    </script>
}