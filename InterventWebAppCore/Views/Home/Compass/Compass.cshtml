@Html.Partial("Compass/_CompassHeader", new ViewDataDictionary(ViewData) { { "OrgId", ViewData["OrgId"] }, { "MenuClass", "lmc-menu-hidden" }, { "DateFormat", ViewData["DateFormat"] } })

<section class="lmc-index lmc-wrapper title-casing">
	<section class="lmc-login">
		<div class="grid-container">
