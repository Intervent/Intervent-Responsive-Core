<!-- Error Modal-->
<div id="error-modal" class="reveal small" data-reveal>
	<div class="grid-x grid-margin-x">
		<div class="cell small-12">
			<h2 class="text-center"></h2>
			<p>
				<span id="error-message-genericmodal"></span>
			</p>
