@model InterventWebApp.TobaccoGoalModel
@using InterventWebApp

<div class="grid-container">
    <div class="grid-x grid-margin-x">
        <div class="small-12 cell avoid-page-break-inside">
            <h2>@Translate.Message("L1060")</h2>
            <div class="grid-x grid-margin-x">
                <div class="small-12 cell">
                    @if (Model.tobaccoGoalContent.Count > 0)
                    {
                        <ul class="decorated pink">
                            @for (int i = 0; i < Model.tobaccoGoalContent.Count; i++)
                            {
                                @Html.Raw(Model.tobaccoGoalContent[i])
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<a class="close-button hide-for-print" data-close>&#215;</a>