@using InterventWebApp;
@model InterventWebApp.RiskChart
<script>
    @if (Model != null)
    {
        var risk = Model;
        if (risk.riskName == "LDL")
        {
             @: CreateThreeAMChart('chart-ldl', '@risk.startValue', '@Html.Raw(risk.startText)', '@risk.color1', '@risk.startYear', @risk.currentValue, '@Html.Raw(risk.currentText)', '@risk.color2','@risk.currentYear', @risk.goalValue1, '@Html.Raw(risk.goalText1)', '@Html.Raw(risk.label)', '@risk.includeChar', '@Translate.Message("L3890")');
                }
