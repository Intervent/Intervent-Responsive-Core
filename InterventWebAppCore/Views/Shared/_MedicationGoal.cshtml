@model InterventWebApp.MedicationGoal
@using InterventWebApp

<div class="grid-container">
    <div class="grid-x grid-margin-x">
        <div class="small-12 cell">
            <h2>@Translate.Message("L237")</h2>
            <div class="grid-x grid-margin-x">
                <div class="small-12 cell">
                    @if (Model.medicationGoalContent.Count > 0)
                    {
                        <ul class="decorated blue">
                            @for (int i = 0; i < Model.medicationGoalContent.Count; i++)
                            {
                                @Html.Raw(Model.medicationGoalContent[i])
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<a class="close-button hide-for-print" data-close>&#215;</a>